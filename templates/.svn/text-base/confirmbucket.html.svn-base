{% extends "base.html" %}

{% block content %}
<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
		<div class="post">
		
     <div class="post">
			<h2 class="title">item and quantity</h2>
			<div class="entry">  		
                <form action="/confirm.do" method="post">
                
                     {% if PaymentButton %}
                    {% for orderdata in complete_order_data_set %}

                    <a href="{{ orderdata.product_image }}" rel="lightbox" title="{{ orderdata.product_title }}">
                    
					{{ orderdata.product_title }}</a><br />
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Quantity:<INPUT TYPE="text" SIZE="3" name="{{ orderdata.product_key }}" MAXLENGTH="4" VALUE="{{ orderdata.numberordered }}"><br />
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					Item Price: $ {{ orderdata.product_cost }}<br />
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					Item Total: $ {{ orderdata.product_total_cost }}
					<br /><br />
{% endfor %}
                    + Shipping: $10 (Standard | US only) <a href="addexpeditedshipping">(add expedited shipping for an additional $5)</a><br /><br />
                  
                  <input type="image" src="../static/images/subtotal-button.gif" alt="Update Subtotal">
				</form>
                    <h2 class="title">&nbsp;</h2>
                    <div class="entry"> 

                   					
                    <b>Order Total: $ {{ TotalCost }}</b><br /><br />
                    
                    
                    To checkout using the Amazon payment system, click the 'Pay Now' button below.<br /><br />
                  {{ PaymentButton }}
                                    

                    <h2 class="title">&nbsp;</h2>
                    <div class="entry">
                    
                    Your purchases will result in the following impact compared to the average person:<br />
                    + Carbon savings: {{ order.carbonsavings }}<br />
                    + Waste savings: {{ order.wastesavings }}<br />
                    + Energy savings: {{ order.energysavings }}<br />

</div>
</div>

                  
                    {% else %}
	                  </form>				
                    Oops! It appears you have not selected any green products for your bucket, click <a href="create">here</a> to go back to creating your bucket.


                    {% endif %}

                  
     			</div>
		</div>
		
       
    <br />
    <br />
    <br />
    <br />
    <br />
	
    </div>
</div>
	<!-- end content -->
{% endblock content %} 

